<Window x:Class="kursovaya.GiveWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:kursovaya"
        mc:Ignorable="d"
        Title="GiveWindow" Height="185" Width="380" ResizeMode="NoResize">
    <Grid>
        <Label x:Name="pname" Content="ФИО получателя платы:" HorizontalAlignment="Left" Margin="34,34,0,0" VerticalAlignment="Top"/>
        <Label x:Name="num" Content="Количество" HorizontalAlignment="Left" Margin="222,34,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="nametb" HorizontalAlignment="Left" Margin="34,65,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="141" PreviewTextInput="NameValidationTextBox"/>
        <TextBox x:Name="numtb" HorizontalAlignment="Left" Margin="222,65,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="74" PreviewTextInput="NumberValidationTextBox"/>
        <Button x:Name="givebt" Content="Выдать" HorizontalAlignment="Left" Margin="83,109,0,0" VerticalAlignment="Top" Width="92" Click="givebt_Click" IsDefault="True"/>
        <Button x:Name="cancelbt" Content="Отмена" HorizontalAlignment="Left" Margin="213,109,0,0" VerticalAlignment="Top" Width="83" IsCancel="True"/>

    </Grid>
</Window>
